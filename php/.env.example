# PostgreSQL
POSTGRES_USER=challenge_user
POSTGRES_PASSWORD=secure_password_here
POSTGRES_DB=challenge2
POSTGRES_HOST=postgres
POSTGRES_PORT=5432

# Qdrant
QDRANT_HOST=qdrant
QDRANT_PORT=6333
QDRANT_API_KEY=default-key
QDRANT_COLLECTION=policy_chunks

# Ollama (LLM)
OLLAMA_HOST=http://ollama:11434
OLLAMA_MODEL=mistral  # or llama2, neural-chat

# OpenAI (alternative)
# OPENAI_API_KEY=sk-...
# OPENAI_MODEL=gpt-3.5-turbo

# Application
APP_NAME="Policy Chat"
APP_ENV=development
APP_DEBUG=true
APP_URL=http://localhost:8080
APP_TIMEZONE=UTC
LOG_LEVEL=INFO

# Embedding
EMBEDDING_MODEL=nomic-embed-text
CHUNK_SIZE=512
CHUNK_OVERLAP=128
TOP_K_CHUNKS=5
CONFIDENCE_THRESHOLD=0.60

# JWT (for API authentication)
JWT_SECRET=your_jwt_secret_here
JWT_EXPIRE=3600
