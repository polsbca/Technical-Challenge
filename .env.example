# ============================================================================
# PostgreSQL Configuration
# ============================================================================
POSTGRES_USER=challenge_user
POSTGRES_PASSWORD=secure_password_here_change_in_production
POSTGRES_DB=challenge2
POSTGRES_HOST=postgres
POSTGRES_PORT=5432

# ============================================================================
# Qdrant Configuration
# ============================================================================
QDRANT_HOST=qdrant
QDRANT_PORT=6333
QDRANT_API_KEY=default-key
QDRANT_COLLECTION_NAME=policy_chunks

# ============================================================================
# Ollama (Local LLM) Configuration
# ============================================================================
OLLAMA_HOST=http://ollama:11434
OLLAMA_MODEL=mistral
# Alternative models: llama2, neural-chat, dolphin-mixtral

# ============================================================================
# OpenAI Configuration (Optional - if using OpenAI instead of Ollama)
# ============================================================================
OPENAI_API_KEY=sk-your-api-key-here
OPENAI_MODEL=gpt-3.5-turbo
# OPENAI_MODEL=gpt-4  # for better accuracy

# ============================================================================
# Embedding Model Configuration
# ============================================================================
# Local: nomic-embed-text, mxbai-embed-large (via Ollama)
# Online: text-embedding-3-small, text-embedding-3-large (OpenAI)
EMBEDDING_MODEL=nomic-embed-text
EMBEDDING_DIMENSION=1536

# ============================================================================
# Text Processing Configuration
# ============================================================================
CHUNK_SIZE=512
CHUNK_OVERLAP=128
MIN_CONTENT_WORDS=500
TOP_K_CHUNKS=5
CONFIDENCE_THRESHOLD=0.60

# ============================================================================
# Application Configuration
# ============================================================================
LOG_LEVEL=INFO
ENVIRONMENT=development
# Allowed values: development, production, testing

# ============================================================================
# Web Scraping Configuration
# ============================================================================
HTTP_TIMEOUT=30
MAX_RETRIES=2
USER_AGENT=Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36

# ============================================================================
# Discovery Configuration
# ============================================================================
DISCOVERY_TIMEOUT=10
DISCOVERY_METHODS=sitemap,footer,heuristic,link_text

# ============================================================================
# LLM Extraction Configuration
# ============================================================================
LLM_TEMPERATURE=0.3
LLM_MAX_TOKENS=2000
LLM_TIMEOUT=30

# ============================================================================
# Database Connection Pool
# ============================================================================
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20
DB_POOL_RECYCLE=3600

# ============================================================================
# Redis (Optional - for caching)
# ============================================================================
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0

# ============================================================================
# Email Extraction
# ============================================================================
EXTRACT_EMAILS=true
EXTRACT_COUNTRY=true
EXTRACT_DELETE_LINK=true
